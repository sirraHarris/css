<div>
    <div class="page_content">
        <div class="page_block">
            <header class="header row g-0">
                <div class="col-3">
                    {{>logo}}
                </div>
                <nav class="header_nav col-9">
                    <div class="header_nav_right">
                        {{> temp_nav list=header}}
                    </div>
                </nav>
            </header>
            {{> divider }}
        </div>
        <div class="page_block">
            <div class="hero">
                {{#with hero}}
                {{>hero title=title text=text}}
                <a class="button" href="{{button.url}}">{{button.text}}</a>
                {{/with}}
            </div>
        </div>
        <div class="page_block">
            <div class="row g-4">
                {{#each preview}}
                <div class="col-6">
                    <div class="preview">
                        <div class="preview_header">
                            <span class="preview_date">{{date}}</span>
                            {{#each category}}
                            <span class="preview_category preview_category_{{id}}">{{text}}</span>
                            {{/each}}
                        </div>
                        <strong class="preview_title">{{title}}</strong>
                        <p class="preview_description">{{text}}</p>
                        <a href="#">Continue reading</a>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
        <div class="page_block">
            <main class="main">
                <div class="row g-0">
                    <div class="col-12">
                        <div class="list_header">
                            <div class="row g-0">
                                <div class="col-6">
                                    <h2 class="list_title">List of Posts</h2>
                                </div>
                                <div class="col-6">
                                    <div class="category_list">
                                        {{#each categories}}
                                        <button class="category_button">{{text}}</button>
                                        {{/each}}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-7">
                        <div class="list">
                            {{#each news}}
                                <div class="post">
                                    <strong class="post_title">{{title}}</strong>
                                    <div class="post_info">{{date}} by <span class="post_author">{{author}}</span></div>
                                    <p class="post_description">{{description}}</p>
                                    <a href="#">Continue reading</a>
                                </div>
                            {{/each}}
                        </div>
                    </div>
                    <div class="col-5">
                        <aside class="list_aside">
                            <div class="about">
                                <h4 class="about_title">About</h4>
                                <p class="about_text">{{about}}</p>
                            </div>
                            <div class="link_list">
                                <strong class="link_title">Archives</strong>
                                {{#each archive}}
                                <a href="{{url}}" class="link_item">{{text}}</a>
                                {{/each}}
                            </div>
                            <div class="link_list">
                                <strong class="link_title">Social</strong>
                                {{#each social}}
                                <a href="{{url}}" class="link_item">{{text}}</a>
                                {{/each}}
                            </div>
                        </aside>
                    </div>
                </div>
            </main>
        </div>
        <div class="page_block">
            {{> divider }}
            <footer class="row footer">
                <div class="col-3">
                    {{>logo}}
                    <span class="footer_copyright">Copyright 2023</span>
                </div>
                {{#each footer}}
                    <div class="col-3">
                        <span class="footer_title">{{title}}</span>
                        {{>temp_nav list=links isVertical=true}}
                    </div>
                {{/each}}
            </footer>
        </div>
    </div>
</div>